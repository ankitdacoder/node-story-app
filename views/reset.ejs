<!DOCTYPE html>
<html>
<head>
	<title>Spectrum App</title>
	<link rel="stylesheet" type="text/css" href="/css/sytle.css">
</head>
<style type="text/css">
  .img_cen
  {
    display: block;margin: auto;width: 40%;
  }
</style>
  <script>
        function validateForm(){
            var password = document.forms["form"]["password"].value;
            var rpassword = document.forms["form"]["rpassword"].value;
            if (password != rpassword){
                alert("Password and Confirm Password should be the same.");
                return false;
            }
        }
    </script>
<body>
<div class="modal-dialog">
    <div class="modal-content">
     
       
         <div class="modal-header">
         <div class="img_cen">
               <img src="https://s3.amazonaws.com/spectrumapp/web_images/spectrum_300px.png">
               </div>

        </div>

     
        <div class="modal-header">
          <h3 class="text-center" style="color:#fff;">Reset your password</h3>
        </div>

         <div class="modal-body">
          <form name="form" method="post" onsubmit="return validateForm()" >
             <div class="form-group">
                 <input type="text" name="password"  class="form-control input-lg" placeholder="New Password"/>
             </div>

             <div class="form-group">
                 <input type="password"  name="rpassword" class="form-control input-lg" placeholder="Confirm Password"/>
             </div>

             <div class="form-group">
                 <input type="submit" class="btn btn-block btn-lg btn-primary" value="Reset Password"/>
                 <!-- <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Forgot Password</a></span> -->
             </div>
             </form>
         </div>
    </div>
 </div>


</body>
</html>